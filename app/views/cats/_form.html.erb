<% if action == :new %>
  <% action_url = cats_url %>
<% else %>
  <% action_url = cat_url(cat) %>
<% end %>
<form action="<%= action_url %>" method="post">Name
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
<input type="text" name="cat[name]" value = "<%= cat.name %>">
<% if cat.sex == 'm' %>
  <% male_checked = 'checked'  %>
  <% female_checked = '' %>
<% elsif cat.sex == 'f' %>
  <% female_checked = 'checked' %>
  <% male_checked = '' %>
<% else %>
  <% female_checked = '' %>
  <% male_checked = '' %>
<% end %>
<input type="radio" name="cat[sex]" value="m" <%= male_checked %> >Male
<input type="radio" name="cat[sex]" value="f" <%= female_checked %> >Female
<select name="cat[color]">
  <option disabled selected>Select a color</option>
  <% Cat.colors.each do |color| %>
    <% if color == cat.color %>
      <% current_color = 'selected' %>
    <% else %>
      <% current_color = '' %>
    <% end %>
    <option value="<%= color %>" <%= current_color %> ><%= color %></option>
  <% end %>
</select>
Birthday <input id="date" type="date" name=cat[birth_date] value=<%= cat.birth_date %> >
<textarea name=cat[description]><%= cat.description %></textarea>
<input type="submit" value="Submit!">
</form>
